---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';
import Intro from '~/components/landing/intro-en.vue';
import Advantages from '~/components/landing/advantages-en.vue';
import WhyWe from '~/components/landing/why-we-en.vue';
import Bonus from '~/components/landing/bonus-en.vue';
import HowDoesItWork from '~/components/landing/how-does-it-work-en.vue';
import BaseForm from '~/components/landing/base-form-en.vue';
const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <Intro />
  <Advantages />
  <WhyWe />
  <Bonus />
  <HowDoesItWork />
  <BaseForm />
</Layout>
